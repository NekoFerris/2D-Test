<Window x:Class="Pong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong"
        mc:Ignorable="d"
        Title="Pong" Height="720" Width="1280" ResizeMode="NoResize" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" Closing="Window_Closing">
    <Grid>
        <Canvas x:Name="MyCanvas" Grid.ColumnSpan="2"/>
        <Button x:Name="btnAdd" Content="Hinzufügen" Margin="0,0,85,10" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="BtnAdd_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnRem" Content="Entfernen" Margin="0,0,10,10" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="70" Click="BtnRem_Click" Grid.Column="1"/>
    </Grid>
</Window>
