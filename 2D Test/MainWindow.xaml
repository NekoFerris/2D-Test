<Window x:Class="_2D_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2D_Test"
        mc:Ignorable="d"
        Title="2D Test" Height="720" Width="1280" ResizeMode="NoResize" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">
    <Grid>
        <Canvas x:Name="MyCanvas" Grid.ColumnSpan="2"/>
        <Button x:Name="btnAdd" Content="Hinzufügen" Margin="0,0,85,10" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnAdd_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnRem" Content="Entfernen" Margin="0,0,10,10" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="70" Click="btnRem_Click" Grid.Column="1"/>
    </Grid>
</Window>
